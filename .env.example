# Django Settings Environment Variables
# Copy file này thành .env và cập nhật với giá trị thực tế của bạn

# ===== RENDER DEPLOYMENT SETTINGS =====
# Secret Key (QUAN TRỌNG: tạo key mới cho production)
# Tạo key mới tại: https://djecrety.ir/
SECRET_KEY=your-secret-key-here

# Debug mode (False cho production trên Render)
DEBUG=False

# Allowed Hosts cho Render
ALLOWED_HOSTS=.onrender.com,localhost,127.0.0.1

# ===== DATABASE CONFIGURATION FOR RENDER =====
# QUAN TRỌNG: Phải set DATABASE_URL để sử dụng PostgreSQL trên Render
# Nếu không set, Django sẽ dùng SQLite và migration sẽ lỗi
# URL này sẽ được Render tự động cung cấp khi tạo PostgreSQL database
DATABASE_URL=postgres://username:password@hostname:port/database_name

# ===== STATIC AND MEDIA FILES =====
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# ===== CORS CONFIGURATION =====
# Frontend domain của bạn
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# ===== JWT CONFIGURATION =====
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7

# ===== EMAIL CONFIGURATION (optional) =====
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# ===== INTERNATIONALIZATION =====
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# ===== CUSTOM DOMAIN (optional) =====
CUSTOM_DOMAIN=your-custom-domain.com
# DB_USER=your_mysql_username
# DB_PASSWORD=your_mysql_password  
# DB_HOST=localhost
# DB_PORT=3306

# Option 3: PostgreSQL (uncomment và fill thông tin)
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=rental_db
# DB_USER=your_postgres_username
# DB_PASSWORD=your_postgres_password
# DB_HOST=localhost
# DB_PORT=5432

# ===== CORS CONFIGURATION =====
# Các domain được phép gọi API (phân cách bằng dấu phẩy)
# Development thường dùng:
CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:5500,http://localhost:5500,http://127.0.0.1:8000

# Production ví dụ:
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===== JWT SETTINGS (Optional - có default values) =====
# Thời gian hết hạn access token (phút)
JWT_ACCESS_TOKEN_LIFETIME=60

# Thời gian hết hạn refresh token (ngày)  
JWT_REFRESH_TOKEN_LIFETIME=7

# ===== EMAIL CONFIGURATION (Optional) =====
# Development - hiển thị email trong console
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USE_TLS=
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Production với Gmail SMTP:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your_email@gmail.com
# EMAIL_HOST_PASSWORD=your_gmail_app_password

# Production với SendGrid:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your_sendgrid_api_key

# ===== STATIC & MEDIA FILES =====
# Đường dẫn cho static files (CSS, JS, images)
STATIC_URL=/static/
STATIC_ROOT=staticfiles

# Đường dẫn cho media files (user uploads)
MEDIA_URL=/media/
MEDIA_ROOT=media

# ===== TIMEZONE & LANGUAGE =====
# Múi giờ
TIME_ZONE=UTC
# Hoặc: TIME_ZONE=Asia/Ho_Chi_Minh

# Ngôn ngữ
LANGUAGE_CODE=en-us
# Hoặc: LANGUAGE_CODE=vi

# ===== PRODUCTION DEPLOYMENT SETTINGS =====
# Khi deploy production, uncomment và cập nhật:

# DEBUG=False
# SECRET_KEY=your-super-secret-production-key-here-minimum-50-characters-long
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

